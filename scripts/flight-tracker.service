[Unit]
Description=Flight Tracker Complete System
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/flight-tracker
ExecStart=/home/pi/flight-tracker/scripts/start-raspi-all.sh
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
